<div class="container show-rayout">
	<div class ="col-md-4">
		<%= render 'users/prof', user: @user, book: @newbook %>
	</div>
	<div class ="col-md-8">
		<%= link_to :back do%>
		<span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
		<% end %>
		<h1 class="show-title"><%= link_to "『 #{@book.title} 』",user_path(@user) %></h1>
		<div class="show-body">
			<p><%= simple_format(@book.body) %></p>
			<div class="show-body-etc">
				<%= link_to user_path(@user) do %>
					<%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", class: "profile_image list_profile_image" %>
				<% end %>
					<p class="show-date"><%= @book[:created_at].strftime("%Y-%m-%d %H:%M") %></p>

					<% if current_user.id == @user.id %>
					<%= link_to "[edit]", edit_book_path(@book) %>
					<%= link_to "[delete]", book_path(@book), method: :delete, data: { confirm: "削除しますか？"} %>
				<% end %>

			</div>
		</div>
	</div>
</div>